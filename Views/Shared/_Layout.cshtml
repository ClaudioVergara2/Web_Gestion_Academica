<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApiNotas.styles.css" asp-append-version="true" />
</head>
<body style="background-color: #2c3e50;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Menu">WebApiNotas</a>
                <div class="ms-auto d-flex">
                    <a class="navbar-brand text-white">Nombre Usuario</a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" id="sidebar" style="width: 250px; height: 100vh;">
        <ul class="nav nav-pills flex-column mb-auto flex-grow-1">
            <hr />
            <li>
                <a href="" class="nav-link text-white">
                    Notas
                </a>
            </li>
            <hr />
            <li>
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="IngresoCurso">Curso</a>
            </li>
            <hr />
            <li>
                <a href="#" class="nav-link text-white">
                    Personas
                </a>
            </li>
            <hr />
            <li>
                <a href="#" class="nav-link text-white">
                    Perfil
                </a>
            </li>
            <hr />
            <li>
                <a href="#" class="nav-link text-white">
                    Usuario
                </a>
            </li>
            <hr />
            <li>
                <a class="nav-link text-white">
                    Alumno por curso
                </a>
            </li>
            <hr />
            <li>
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Asignatura">Asignatura</a>
            </li>
            <hr />
            <li>
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Semestre">Semestre</a>
            </li>
            <hr />
            <li>
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="IngresoAsignatura">Tipo Asignatura</a>
            </li>
            <hr />
        </ul>
    </div>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
